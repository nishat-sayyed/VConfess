<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:minHeight="100dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            tools:text="A boy confessed..."
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/confessionTextView"
            android:layout_marginStart="13dp" />

        <TextView
            android:padding="8dp"
            android:id="@+id/confessionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/genderTextView"
            android:layout_margin="4dp"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:text="Some confession is here and I am trying to confess" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimary"
            tools:text="3 hours ago" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confessionTextView"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:id="@+id/infoTextView"
                tools:text="TE INFT C"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
